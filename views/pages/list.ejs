<html lang="pt">

<head>
    <%- include('../partials/head'); %>
</head>

<body>
    <header>
        <%- include('../partials/header_internal'); %>
    </header>
    <main identifier = "list">
        <div id="container">
            <h2>Tarefas</h2>
            <div id='container-info'> <input type='text' id='task-add' placeholder='New Task' maxlength='35'>
                <div id='priority'>
                    <div>
                        <p>Prioridade</p>
                    </div>
                    <div id='level'>
                        <div class='choose-priority' id='priority-one' marked='False'></div>
