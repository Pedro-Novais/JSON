                        <div class='choose-priority' id='priority-three' marked='False'></div>
                    </div>
                </div>
                <div id='btn-add'><img src='svg/plus-solid.svg' alt='Adicionar task' height='25rem'></div>
            </div>

            <div id='task-made'> </div>
        </div>
    </main>

    <footer>
        <%- include('../partials/footer'); %>
    </footer>

    <script src="scripts/relocate.js" type="module"></script>
    <script src="scripts/changeViewNew.js" type="module"></script>
    <script src="scripts/list/interactor.js" type="module" external = "true"></script>
</body>

</html>